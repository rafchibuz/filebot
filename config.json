  "patterns": {
    "contractDatePattern": "(?i)договор[^\\n\\r\\d]{0,80}",
    "actDatePattern": "(?i)акт[^\\n\\r\\d]{0,80}",
    "buyerLabelPattern": "(?i)покупател[ья]:?",
